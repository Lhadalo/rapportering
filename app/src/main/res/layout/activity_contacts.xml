<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_reporter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_perm_identity_black_24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_reporter"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RapportÃ¶r"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/img_reporter"
        app:layout_constraintTop_toTopOf="@id/img_reporter"
        app:layout_constraintBottom_toBottomOf="@id/img_reporter"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_reporter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/et_reporter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reporter"/>

    <ImageView
        android:id="@+id/img_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_people_black_24dp"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_reporter"/>

    <TextView
        android:id="@+id/tv_contact"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_contacts_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/img_contacts"
        app:layout_constraintTop_toTopOf="@id/img_contacts"
        app:layout_constraintBottom_toBottomOf="@id/img_contacts"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_contact"/>

</android.support.constraint.ConstraintLayout>
